{
	"info": {
		"_postman_id": "kds-api-collection",
		"name": "KDS API - Platomico",
		"description": "Coleccion de endpoints para el Kitchen Display System",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:3001"
		},
		{
			"key": "orderId",
			"value": ""
		}
	],
	"item": [
		{
			"name": "Orders",
			"item": [
				{
					"name": "Crear Orden",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"pm.collectionVariables.set('orderId', jsonData.id);"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"items\": [\n        {\n            \"name\": \"Pizza Margherita\",\n            \"priceAmount\": 12.50,\n            \"priceCurrency\": \"EUR\",\n            \"quantity\": 2\n        },\n        {\n            \"name\": \"Coca Cola\",\n            \"priceAmount\": 2.50,\n            \"priceCurrency\": \"EUR\",\n            \"quantity\": 2\n        }\n    ]\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/orders",
							"host": ["{{baseUrl}}"],
							"path": ["orders"]
						},
						"description": "Crea una nueva orden con los items especificados. Retorna la orden creada con estado PENDING."
					}
				},
				{
					"name": "Listar Ordenes Activas",
					"request": {
						"method": "GET",
						"url": {
							"raw": "{{baseUrl}}/orders",
							"host": ["{{baseUrl}}"],
							"path": ["orders"]
						},
						"description": "Lista todas las ordenes que NO estan en estado DELIVERED. Ordenadas por fecha de creacion (mas antiguas primero)."
					}
				},
				{
					"name": "Obtener Historial",
					"request": {
						"method": "GET",
						"url": {
							"raw": "{{baseUrl}}/orders/history",
							"host": ["{{baseUrl}}"],
							"path": ["orders", "history"]
						},
						"description": "Lista ordenes DELIVERED de las ultimas 2 horas. Ordenadas por fecha de actualizacion (mas recientes primero)."
					}
				},
				{
					"name": "Obtener Orden por ID",
					"request": {
						"method": "GET",
						"url": {
							"raw": "{{baseUrl}}/orders/{{orderId}}",
							"host": ["{{baseUrl}}"],
							"path": ["orders", "{{orderId}}"]
						},
						"description": "Obtiene una orden especifica por su ID."
					}
				},
				{
					"name": "Editar Orden (Items)",
					"request": {
						"method": "PATCH",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"items\": [\n        {\n            \"name\": \"Hamburguesa Doble\",\n            \"priceAmount\": 15.99,\n            \"priceCurrency\": \"EUR\",\n            \"quantity\": 1\n        }\n    ]\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/orders/{{orderId}}",
							"host": ["{{baseUrl}}"],
							"path": ["orders", "{{orderId}}"]
						},
						"description": "Edita los items de una orden. Solo funciona si la orden esta en PENDING o IN_PROGRESS."
					}
				},
				{
					"name": "Cambiar Estado a IN_PROGRESS",
					"request": {
						"method": "PATCH",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"state\": \"IN_PROGRESS\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/orders/{{orderId}}/state",
							"host": ["{{baseUrl}}"],
							"path": ["orders", "{{orderId}}", "state"]
						},
						"description": "Cambia el estado de la orden a IN_PROGRESS (en preparacion)."
					}
				},
				{
					"name": "Cambiar Estado a READY",
					"request": {
						"method": "PATCH",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"state\": \"READY\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/orders/{{orderId}}/state",
							"host": ["{{baseUrl}}"],
							"path": ["orders", "{{orderId}}", "state"]
						},
						"description": "Cambia el estado de la orden a READY (lista para recoger)."
					}
				},
				{
					"name": "Agregar Evidencia Fotografica",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"photoEvidence\": \"data:image/jpeg;base64,/9j/4AAQSkZJRgABAQAAAQABAAD...\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/orders/{{orderId}}/photo-evidence",
							"host": ["{{baseUrl}}"],
							"path": ["orders", "{{orderId}}", "photo-evidence"]
						},
						"description": "Agrega evidencia fotografica a una orden. Solo funciona si la orden esta en READY. La foto debe ser en formato base64."
					}
				},
				{
					"name": "Pickup Orden (Rider recoge)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"riderId\": \"rider-12345\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/orders/{{orderId}}/pickup",
							"host": ["{{baseUrl}}"],
							"path": ["orders", "{{orderId}}", "pickup"]
						},
						"description": "Marca la orden como DELIVERED y asigna el riderId. Simula que un repartidor recoge la orden."
					}
				},
				{
					"name": "Recuperar Orden",
					"request": {
						"method": "POST",
						"url": {
							"raw": "{{baseUrl}}/orders/{{orderId}}/recover",
							"host": ["{{baseUrl}}"],
							"path": ["orders", "{{orderId}}", "recover"]
						},
						"description": "Recupera una orden DELIVERED y la devuelve a estado PENDING. Limpia el riderId y photoEvidence."
					}
				}
			]
		}
	]
}
